<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:id="@+id/ui_settings_edit_toggle_fragment_server_textView"
            android:layout_marginTop="5dp"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ui_settings_edit_toggle_fragment_server_spinner"
            android:layout_below="@+id/ui_settings_edit_toggle_fragment_server_textView"
            android:spinnerMode="dropdown"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:id="@+id/ui_settings_edit_toggle_fragment_type_textView"
            android:layout_below="@+id/ui_settings_edit_toggle_fragment_server_spinner"
            android:layout_marginTop="5dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ui_settings_edit_toggle_fragment_type_spinner"
            android:layout_below="@+id/ui_settings_edit_toggle_fragment_type_textView"
            android:spinnerMode="dropdown"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/ui_settings_edit_toggle_fragment_name_textView"
            android:layout_below="@+id/ui_settings_edit_toggle_fragment_type_spinner"
            android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ui_settings_edit_toggle_fragment_name_editTextView"
            android:layout_below="@+id/ui_settings_edit_toggle_fragment_name_textView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:hint="Toggle"/>
</RelativeLayout>